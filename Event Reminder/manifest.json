{
    "manifest_veresion":2,
    "name":"Event Reminder",
    "version":"0.0.1",
    "permissions":[
        "activeTab",
        "storage"
    ],
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon":{
            "128":"logo.png"
        }
    },
    "content_scripts":[
        {
            "matches":["<all_urls"],
            "js":["content.js"]
        }
    ],
    "icons":{
        "128":"logo.png"
    }
}